{
  "name": "@use-form/use-form",
  "author": "Jucian0 <juciano@outlook.com.br>",
  "description": "UseFom provides a way to create complex forms easily.",
  "homepage": "https://useform.org/",
  "version": "1.0.11",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/use-form/use-form",
    "homepage": "https://github.com/use-form/use-form"
  },
  "keywords": [
    "react",
    "hooks",
    "form",
    "forms",
    "form-validation",
    "validation",
    "typescript",
    "react-hooks"
  ],
  "module": "dist/use-form.esm.js",
  "size-limit": [
    {
      "path": "dist/use-form.cjs.production.min.js",
      "limit": "10 KB"
    },
    {
      "path": "dist/use-form.esm.js",
      "limit": "10 KB"
    }
  ],
  "main": "dist/index.js",
  "typings": "dist/index.d.ts",
  "files": [
    "dist"
  ],
  "engines": {
    "node": ">=10"
  },
  "scripts": {
    "start": "tsdx watch",
    "build": "tsdx build",
    "test": "tsdx test",
    "lint": "tsdx lint",
    "prepare": "tsdx build",
    "size": "size-limit",
    "analyze": "size-limit --why",
    "precommit": "lint-staged"
  },
  "husky": {
    "hooks": {
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS",
      "prepare-commit-msg": "exec < /dev/tty && git cz --hook || true"
    }
  },
  "lint-staged": {
    "{src,test}/**/*.ts": [
      "prettier --write",
      "git add"
    ]
  },
  "config": {
    "commitizen": {
      "path": "node_modules/cz-conventional-changelog"
    }
  },
  "prettier": {
    "printWidth": 80,
    "trailingComma": "es5",
    "semi": false,
    "singleQuote": true
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "devDependencies": {
    "@commitlint/cli": "^12.1.1",
    "@commitlint/config-conventional": "^12.1.1",
    "@size-limit/preset-small-lib": "^4.10.2",
    "@testing-library/jest-dom": "^5.8.0",
    "@testing-library/react": "^10.0.4",
    "@testing-library/react-hooks": "^3.2.1",
    "@testing-library/user-event": "^10.3.5",
    "@types/react": "^16.9.55",
    "@types/react-dom": "16.0.5",
    "@types/yup": "^0.29.0",
    "commitizen": "^4.1.2",
    "cz-conventional-changelog": "^3.2.0",
    "husky": "^6.0.0",
    "lint-staged": "^10.2.4",
    "react": "17.0.2",
    "react-dom": "17.0.2",
    "react-test-renderer": "^17.0.2",
    "size-limit": "^4.10.2",
    "tsdx": "^0.14.1",
    "tslib": "^2.2.0",
    "typescript": "^4.2.3"
  },
  "dependencies": {
    "dot-prop-immutable": "^2.1.0",
    "yup": "^0.29.0"
  },
  "peerDependencies": {
    "react": "17.0.2"
  },
  "release": {
    "plugins": [
      "@semantic-release/release-notes-generator",
      "@semantic-release/changelog",
      "@semantic-release/npm",
      "@semantic-release/git",
      "@semantic-release/github"
    ]
  }
}
